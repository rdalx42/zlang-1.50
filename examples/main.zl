
-- grid drawing program

import "IMPORT_ME.zl"

const num I_SIZE = 10 
const num J_SIZE = 10

fn draw : UPDATE_TIME {
    num i = 0 
    num j = 0

    while true {

        i = 0 
        
        while i < I_SIZE {
            print \n
            i = i + 1
            j = 0 
            while j < J_SIZE {
                color  15 1
                print * 

                j = j + 1
            }
        }

        waitms UPDATE_TIME 

        clear
    }
}

fire draw : 5
